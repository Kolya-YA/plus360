:root{--body-bg-color:#f8f8f8;--block-bg-color:#fff;--wraper-max-width:940px;--text-main-color:#444;--header-font-family:'Open Sans', sans-serif;--common-font-family:'Open Sans', sans-serif;--footer-font-family:'Open Sans', sans-serif;--common_font-size:16px}*,*:before,*:after{box-sizing:border-box}html{height:100vh}body{height:100vh;margin:0;font-family:var(--common-font-family);font-size:var(--common_font-size);background-color:var(--body-bg-color);color:var(--text-main-color)}.wrapper{min-height:100%;max-width:var(--wraper-max-width);margin:0 auto;display:grid;grid-template-rows:auto 1fr auto;grid-gap:1rem}.wrapper>*{background-color:var(--block-bg-color);padding:1rem}.main-home.comming-soon{min-height:100%;display:flex;flex-direction:column;justify-content:space-around;align-items:center}.main-home h1,.main-home p{margin:0 0 1em}.header{font-family:var(--header-font-family)}.header-top{display:flex;justify-content:space-between;align-items:flex-end;font-size:120%;font-weight:100}.header-top a{text-decoration:none;color:var(--text-main-color);text-transform:uppercase}.header-top__logo{font-weight:100}.header-top__logo span{text-transform:lowercase;font-weight:600}.header-bottom{margin-top:1rem;position:relative}.header-bottom ul{margin:0;padding:0;list-style:none}.header-bottom__portfoulo-menu,.header-bottom__buro-menu{display:flex;justify-content:space-around;flex-wrap:wrap}.header-bottom__portfoulo-menu.header-bottom__portfoulo-menu--hidden,.header-bottom__portfoulo-menu.header-bottom__buro-menu--hidden,.header-bottom__buro-menu.header-bottom__portfoulo-menu--hidden,.header-bottom__buro-menu.header-bottom__buro-menu--hidden{visibility:hidden}.header-bottom__portfoulo-menu a,.header-bottom__buro-menu a{display:block;text-decoration:none;color:var(--text-main-color);text-transform:uppercase;padding:.5em}.header-bottom__buro-menu{position:absolute;top:0;left:0;min-width:100%}.footer{font-family:var(--footer-font-family)}.footer-menu{display:flex;justify-content:space-around;flex-wrap:wrap}.footer-menu{margin:0;padding:0}.footer-menu li{margin:0;padding:0;list-style:none}.footer-menu a{display:block;text-decoration:none;color:var(--text-main-color);text-transform:uppercase;padding:.5em}